<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cisco_cardview"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="60dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:id="@+id/cisco_image"
                android:src="@mipmap/desktop_icon"
                android:tint="@color/bright_foreground_disabled_material_dark"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sm_cisco"
                android:id="@+id/textView2"
                android:layout_weight="0.02"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/midlab_cardview"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="60dp"
        android:layout_below="@id/cisco_cardview"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:id="@+id/midlab_image"
                android:src="@mipmap/desktop_icon"
                android:tint="@color/bright_foreground_disabled_material_dark"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sm_midlab"
                android:id="@+id/textView3"
                android:layout_weight="0.02"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/sr_cardview"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="60dp"
        android:layout_below="@id/midlab_cardview"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:id="@+id/sr_image"
                android:src="@mipmap/desktop_icon"
                android:tint="@color/bright_foreground_disabled_material_dark"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sm_labsr"
                android:id="@+id/textView4"
                android:layout_weight="0.02"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/sm14_cardview"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="60dp"
        android:layout_below="@id/sr_cardview"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:id="@+id/sm14_image"
                android:src="@mipmap/desktop_icon"
                android:tint="@color/bright_foreground_disabled_material_dark"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sm_sm14"
                android:id="@+id/textView5"
                android:layout_weight="0.02"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/other_cardview"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="60dp"
        android:layout_below="@id/sm14_cardview"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:id="@+id/other_image"
                android:src="@mipmap/desktop_icon"
                android:tint="@color/bright_foreground_disabled_material_dark"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sm_other"
                android:id="@+id/textView6"
                android:layout_weight="0.02"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:id="@+id/total_image"
        android:src="@mipmap/stats_icon"
        android:tint="@color/accent_material_light"
        android:paddingLeft="10dp"
        android:layout_below="@id/other_cardview"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/sm_total"
        android:id="@+id/textView7"
        android:layout_weight="0.02"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:paddingTop="2dp"
        android:layout_below="@id/other_cardview"
        android:layout_toRightOf="@id/total_image"
        android:textColor="@color/accent_material_light"/>

    <ImageView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:id="@+id/othertotal_image"
        android:src="@mipmap/stats_icon"
        android:tint="@color/bright_foreground_disabled_material_dark"
        android:paddingLeft="10dp"
        android:layout_below="@id/total_image"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/sm_othertotal"
        android:id="@+id/textView8"
        android:layout_below="@id/textView7"
        android:paddingTop="12dp"
        android:layout_toRightOf="@id/othertotal_image"
        android:layout_weight="0.02"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>