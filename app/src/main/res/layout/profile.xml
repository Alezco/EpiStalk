<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:stretchColumns="1"
            android:shrinkColumns="1">
            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/profile_login_image"
                    android:tint="@color/light_gray"
                    android:src="@mipmap/person_icon"
                    android:contentDescription="@string/person_description"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_login"
                    android:textSize="20sp"
                    android:id="@+id/profile_login"/>
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/profile_socket_image"
                    android:tint="@color/light_gray"
                    android:src="@mipmap/stats_icon"
                    android:contentDescription="@string/stats_description"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_socket"
                    android:textSize="20sp"
                    android:id="@+id/profile_socket"/>
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/profile_ip_image"
                    android:tint="@color/light_gray"
                    android:src="@mipmap/stats_icon"
                    android:contentDescription="@string/stats_description"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_ip"
                    android:textSize="20sp"
                    android:id="@+id/profile_ip"/>
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/profile_timeConnection_image"
                    android:tint="@color/light_gray"
                    android:src="@mipmap/time_icon"
                    android:contentDescription="@string/time_description"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_timeConnection"
                    android:textSize="20sp"
                    android:id="@+id/profile_timeConnection"/>
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/profile_lastStatusChange_image"
                    android:tint="@color/light_gray"
                    android:src="@mipmap/time_icon"
                    android:contentDescription="@string/time_description"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_lastStatusChange"
                    android:textSize="20sp"
                    android:id="@+id/profile_lastStatusChange"/>
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/profile_inPIE_image"
                    android:tint="@color/light_gray"
                    android:src="@mipmap/desktop_icon"
                    android:contentDescription="@string/sm_description"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_inPIE"
                    android:textSize="20sp"
                    android:id="@+id/profile_inPIE"/>
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/profile_location_image"
                    android:tint="@color/light_gray"
                    android:src="@mipmap/location_icon"
                    android:contentDescription="@string/location_description"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_location"
                    android:textSize="20sp"
                    android:id="@+id/profile_location"/>
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/profile_promo_image"
                    android:tint="@color/light_gray"
                    android:src="@mipmap/promo_icon"
                    android:contentDescription="@string/promo_description"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_promo"
                    android:textSize="20sp"
                    android:id="@+id/profile_promo"/>
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/profile_status_image"
                    android:tint="@color/light_gray"
                    android:src="@mipmap/stats_icon"
                    android:contentDescription="@string/stats_description"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_status"
                    android:textSize="20sp"
                    android:id="@+id/profile_status"/>
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/profile_userdata_image"
                    android:tint="@color/light_gray"
                    android:src="@mipmap/stats_icon"
                    android:contentDescription="@string/stats_description"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_userdata"
                    android:id="@+id/profile_userdata"
                    android:textSize="20sp"/>
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/profile_sm_image"
                    android:tint="@color/light_gray"
                    android:src="@mipmap/desktop_icon"
                    android:contentDescription="@string/sm_description"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_sm"
                    android:id="@+id/profile_sm"
                    android:textSize="20sp"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>